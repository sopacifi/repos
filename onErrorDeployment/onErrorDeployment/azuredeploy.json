{
    //"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "serverfarmName": {
            "type": "string",
            "defaultValue": "[concat('Hosting-',resourceGroup().name)]"
        },
        "webappName": {
            "type": "string",
            "defaultValue": "[concat('Webapp-',resourceGroup().name)]"
        },
        "msDeployPackageUrl": {
            "type": "string",
            "minLength": 2
        },
        "deploymentId": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "templateLinkBase": {
            "type": "string",
            "defaultValue": "[uri(replace(json(string(deployment().properties.templateLink)).uri,' ','%20'), '.')]"
        },
        "templateLinkAccessToken": {
            "type": "securestring",
            "defaultValue": ""
        }

    },
    "resources": [{
            "apiVersion": "2018-05-01",
            "name": "infrastructure",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(uri(parameters('templateLinkBase'), 'nested/infrastructure.json'), parameters('templateLinkAccessToken'))]"
                },
                "parameters": {
                    "serverfarmName": {
                        "value": "[parameters('serverfarmName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "webappName": {
                        "value": "[parameters('webappName')]"
                    },
                    "msDeployPackageUrl": {
                        "value": "[parameters('msDeployPackageUrl')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2018-05-01",
            "name": "downscale-infrastructure-runner",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "resources": [
                ]
              },
              "onErrorDeployment": {
                "type": "SpecificDeployment",
                "deploymentName": "infrastructure-downscale"
            }
            },            
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'infrastructure')]"
            ]
        },       
        {
            "apiVersion": "2018-05-01",
            "name": "infrastructure-downscale",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(uri(parameters('templateLinkBase'), 'nested/infrastructure-downscale.json'), parameters('templateLinkAccessToken'))]"
                },
                "parameters": {
                    "serverfarmName": {
                        "value": "[parameters('serverfarmName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }                    
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'downscale-infrastructure-runner')]"
            ]
        }
    ]
}
